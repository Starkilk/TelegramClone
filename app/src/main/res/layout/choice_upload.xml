<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetChoice"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_hideable = "true"
    android:background="@color/color_accent"
    app:behavior_peekHeight = "0dp"
    android:layout_height="@dimen/bottom_sheet_height">

    <ImageView
        android:id="@+id/bAttachImage"
        android:layout_width="@dimen/b_bottom_sheet_width"
        android:layout_height="match_parent"
        android:src="@drawable/ic_attach_image"
        android:layout_margin="@dimen/appPadding"/>

    <ImageView
        android:id="@+id/bAttachFile"
        android:layout_width="@dimen/b_bottom_sheet_width"
        android:layout_height="match_parent"
        android:src="@drawable/ic_attach_file"
        android:layout_margin="@dimen/appPadding"/>

</LinearLayout>