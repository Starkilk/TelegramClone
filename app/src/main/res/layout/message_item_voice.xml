<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/appPadding"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!--ГОЛОСОВОЕ СООБЩЕНИЕ ОТ СОБЕСЕДНИКА-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/blocReceivedVoiceMessage"
        android:layout_width="@dimen/chat_voice_width"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_receiving_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="@dimen/chat_voice_height">

    <ImageView
        android:id="@+id/bChatReceivedPlay"
        android:layout_width="@dimen/b_voice_width"
        android:layout_height="@dimen/b_voice_height"
        android:src="@drawable/ic_play_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/bChatReceivedStop"
            android:layout_width="@dimen/b_voice_width"
            android:layout_height="@dimen/b_voice_height"
            android:src="@drawable/ic_stop_blue"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>



        <TextView
            android:id="@+id/chatReceivedVoiceMessageTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text = "7:30 PM"
            android:textColor="@color/color_grey"
            android:gravity="end"
            android:layout_marginEnd="@dimen/app_small_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--ГОЛОСОВОЕ СООБЩЕНИЕ ОТ СОБЕСЕДНИКА-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/blocUserVoiceMessage"
        android:layout_width="@dimen/chat_voice_width"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_user_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="@dimen/chat_voice_height">

        <ImageView
            android:id="@+id/bChatUserPlay"
            android:layout_width="@dimen/b_voice_width"
            android:layout_height="@dimen/b_voice_height"
            android:src="@drawable/ic_play_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/bChatUserStop"
            android:layout_width="@dimen/b_voice_width"
            android:layout_height="@dimen/b_voice_height"
            android:src="@drawable/ic_stop_green"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>



        <TextView
            android:id="@+id/chatUserVoiceMessageTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text = "7:30 PM"
            android:textColor="@color/color_grey"
            android:gravity="end"
            android:layout_marginEnd="@dimen/app_small_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>