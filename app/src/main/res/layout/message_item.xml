<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/appPadding"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!--НАШИ СООБЩЕНИЯ-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/blocUserMessage"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_marginStart="100dp"
        android:background="@drawable/bg_user_message"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chatUserMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text = "Hello, my name is Pasha"
            android:textColor="@color/black"
            android:gravity="end"
            android:padding="@dimen/appPadding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:id="@+id/chatUserMessageTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text = "7:30 PM"
            android:textColor="@color/black"
            android:gravity="end"
            android:layout_marginEnd="@dimen/app_small_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chatUserMessage"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--СООБЩЕНИЯ СОБЕСЕДНИКА-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/blocReceivedMessage"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_marginEnd="100dp"
        android:background="@drawable/bg_receiving_message"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chatReceivedMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text = "Hello, my name is Pasha"
            android:textColor="@color/black"
            android:gravity="end"

            android:padding="@dimen/appPadding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:id="@+id/chatReceivedMessageTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text = "7:30 PM"
            android:textColor="@color/black"
            android:gravity="end"
            android:layout_marginEnd="@dimen/app_small_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chatReceivedMessage"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--КАТРИНКА ПОСЛАНАЯ СОБЕСЕДНИКОМ-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/blocReceivedImageMessage"
        android:layout_width="@dimen/chat_image_width"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="@dimen/chat_image_height">

        <ImageView
            android:id="@+id/chatReceivedImage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/chatReceivedImageMessageTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text = "7:30 PM"
            android:textColor="@color/color_grey"
            android:gravity="end"
            android:layout_marginEnd="@dimen/app_small_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/chatReceivedImage" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--КАРТИНКА ПОСЛАНАЯ НАМИ-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/blocUserImageMessage"
        android:layout_width="@dimen/chat_image_width"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="@dimen/chat_image_height">

        <ImageView
            android:id="@+id/chatUserImage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/chatUserImageMessageTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text = "7:30 PM"
            android:textColor="@color/color_grey"
            android:gravity="end"
            android:layout_marginEnd="@dimen/app_small_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/chatUserImage" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>